{
    "manifest_version": 2,
    "name": "Color Picker",
    "version": "1.0",
    "description": "Select colors from your screen and get their RGB, Hex, and HSL values",
    "permissions": ["activeTab", "clipboardWrite"],
    "browser_action": {
      "default_popup": "popup/popup.html"
    },
    "background": {
      "scripts": ["background/background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/colorPicker.js"],
        "css": ["content/colorPicker.css"]
      }
    ],
    "web_accessible_resources": [
      "assets/*"
    ]
  }